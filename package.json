{
  "name": "magicbell-root",
  "private": true,
  "version": "0.0.0",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Stephan Meijer",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "clean": "manypkg exec yarn clean",
    "start": "turbo run start --parallel --no-cache --filter=!playground",
    "start:example": "yarn --cwd example && yarn --cwd example start",
    "start:storybook": "cross-env NODE_OPTIONS=--openssl-legacy-provider start-storybook -p 6006",
    "start:playground": "yarn --cwd packages/playground start",
    "generate:resources": "yarn --cwd packages/magicbell generate:resources && yarn --cwd packages/cli generate:resources",
    "build": "turbo run build",
    "build:example": "yarn --cwd example && yarn --cwd example build",
    "build:storybook": "build-storybook",
    "lint": "run-s lint:*",
    "lint:typescript": "tsc --noEmit",
    "lint:eslint": "eslint --fix .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand --ci --coverage",
    "postinstall": "husky install && node scripts/sync-paths.js && manypkg check && link-workspaces --no-source",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:release": "yarn build && changeset publish",
    "console": "ts-node"
  },
  "lint-staged": {
    "*.{md,json,yml,yaml}": [
      "prettier -w"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@babel/core": "^7.23.3",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.24.4",
    "@manypkg/cli": "^0.19.1",
    "@size-limit/preset-small-lib": "^8.0.1",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/addons": "^6.5.8",
    "@storybook/builder-vite": "^0.2.2",
    "@storybook/react": "^6.5.9",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.2.1",
    "@tsconfig/create-react-app": "^1.0.3",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "happy-dom": "^12.1.5",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "link-workspaces": "^1.1.0",
    "lint-staged": "^12.5.0",
    "msw": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup-plugin-analyzer": "^4.0.0",
    "size-limit": "^8.0.1",
    "tiny-glob": "^0.2.9",
    "ts-jest": "^29.1.1",
    "tslib": "^2.3.1",
    "tsx": "^3.9.0",
    "turbo": "^1.4.5",
    "typescript": "^4.4.4",
    "vite": "^3.1.0",
    "vite-plugin-banner": "^0.5.0",
    "zx": "^7.1.1"
  }
}
